{
  "$schema": "https://unpkg.com/syncpack@13.0.0/dist/schema.json",
  "dependencyTypes": ["dev", "prod", "peer"],
  "semverGroups": [
    {
      "label": "Use exact version numbers for dependencies",
      "range": "",
      "dependencyTypes": ["prod", "dev"]
    },
    {
      "label": "Use major version numbers for peer dependencies",
      "range": "^",
      "dependencyTypes": ["peer"]
    }
  ],
  "sortAz": ["scripts", "peerDependencies", "dependencies", "devDependencies"],
  "sortFirst": [
    "private",
    "name",
    "version",
    "license",
    "description",
    "keywords",
    "author",
    "repository",
    "homepage",
    "bugs",
    "main",
    "module",
    "types",
    "files",
    "scripts",
    "engines",
    "packageManager",
    "peerDependencies",
    "dependencies",
    "devDependencies"
  ]
}
