{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "${configDir}/next-env.d.ts",
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx",
    "${configDir}/.next/types/**/*.ts"
  ],
  "exclude": ["${configDir}/node_modules"]
}
