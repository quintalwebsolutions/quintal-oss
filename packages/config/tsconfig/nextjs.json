{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "module": "esnext",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "${configDir}/next-env.d.ts",
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx",
    "${configDir}/.next/types/**/*.ts"
  ],
  "exclude": ["${configDir}/node_modules"]
}
