{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": [".dist/**"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "//#lint": {},
    "lint:check": {},
    "//#lint:check": {},
    "lint:types": {},
    "test": {
      "inputs": ["src/**", "tests/**"],
      "env": ["CI"],
      "outputs": [".coverage/**", ".coverage-ts/**", "junit.xml"]
    }
  }
}
